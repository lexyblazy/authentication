extends layout

block content
	
	.container
		.row
			.col-md-6.col-md-offset-3
				h2 Reset Your Password <br><br>
				form(action=`/accounts/forgot/${token}` method='POST')
					.form-group
						label Password
						input.form-control(type="password" placeholder='password' name="password")
					.form-group
						label Confirm Password
						input.form-control(type="password" placeholder="password" name="confirm-password")
					.form-group
						button.btn.btn-success.btn-block Reset Password
					
					