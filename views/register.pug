extends layout

block content
	.container
		.row
			.col-md-6.col-md-offset-3
				form(action="/register" method='POST')
					.form-group
						label Email
						input.form-control(type="email" placeholder="Enter your email" name="email")
					.form-group
						label Name
						input.form-control(type="text" placeholder="Enter your name" name="name")
					.form-group
						label Password
						input.form-control(type="password" placeholder='password' name="password")
					.form-group
						label Confirm Password
						input.form-control(type="password" placeholder="password" name="confirm-password")
					.form-group
						button.btn.btn-success Signup
					small Already have an account? 
						a(href="/login") Login
					
